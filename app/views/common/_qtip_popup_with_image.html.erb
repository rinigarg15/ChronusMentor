<%#
Locals:
popup_title - popup name
%>


<div class='cui-qtip-contentwrapper popup row-fluid'>
  <div class="popup_header">
    <div class="close_image_link">
      <%= link_to_function "x", "closeQtip();", class: "close" %>
    </div>
    <h3><%= popup_title %></h3>
  </div>

  <div class="row-fluid">
    <div class="popup_content scroll-6 clearfix pull-left has-above-9 col-md-2">
      <div class="image">
        <img src="/assets/exclamation.png" alt="Alert">
      </div> 
    </div>
    <%= capture(&binding) %>
  </div>
  <%= javascript_tag %Q[initialize.autoResizeTextAreas();] %>
</div>
