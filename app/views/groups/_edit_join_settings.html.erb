<% modal_v3_popup "feature.connection.header.join_project_requests_title".translate(connection: _Mentoring_Connection) do %>
  <div class="fond-bold">
    <%= "feature.connection.content.allow_users_to_join".translate(connection: _mentoring_connection) %>
  </div>

  <%= simple_form_for @group, url: update_join_settings_group_path(@group), remote: true, html: {id: "update_roles_permission_#{@group.id}"} do |f| %>
    <div class="m-t-md">
      <%= render_roles_for_join_settings(@group) %>
    </div>

    <% action_set(class: "pull-right") do %>
      <%= link_to "display_string.Cancel".translate, "javascript:void(0)", class: "btn btn-white", data: { dismiss: "modal" } %>
      <%= f.button :submit, "display_string.Update".translate %>
    <% end %>
  <% end %>
<% end %>