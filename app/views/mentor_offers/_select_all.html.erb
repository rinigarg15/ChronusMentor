<% if mentor_offers.total_entries > mentor_offers.size %>
  <div id="cjs_select_all_option" class="bg-warning p-xs cui_disable_hover text-center" style="display: none;">
      <div id="cjs_select_all_message">
        <%= "feature.admin_view.content.all_selected_on_the_page_html".translate(:context => 'feature.mentor_offer.header.offers_for_mentoring'.translate(:mentoring => _mentoring), :size => content_tag(:b, mentor_offers.size.to_s)) %>
        <u class="pointer" id="cjs_select_all_handler" data-url="<%=select_all_ids_mentor_offers_path(@filter_params)%>">
           <%= "feature.admin_view.content.select_all_in_this_view_html".translate(:context => 'feature.mentor_offer.header.offers_for_mentoring'.translate(:mentoring => _mentoring), :size => content_tag(:b, mentor_offers.total_entries.to_s)) %>
        </u>
      </div>  
      <div id="cjs_clear_all_message" style="display: none;">
        <%= "feature.admin_view.content.all_selected_in_the_view_html".translate(:context => 'feature.mentor_offer.header.offers_for_mentoring'.translate(:mentoring => _mentoring), :size => content_tag(:b, mentor_offers.total_entries.to_s)) %>
        <u class="pointer"  id="cjs_clear_all_handler"><%= "feature.admin_view.action.Clear_selection".translate %></u>
      </div>
  </div>
<% end %>  
