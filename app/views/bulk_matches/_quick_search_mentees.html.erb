<div class="dropdown m-t-sm %> quick_search_mentees">
  <div class="no-padding table-bordered dropdown-toggle" data-toggle="dropdown" ng-show="(mentor.group_status == selected_label || mentor.group_status == unmatched_label) && mentor.pickable_slots > 0" >
    <label for="cjs_quick_search_{{mentor.id}}" class="sr-only"><%= "feature.bulk_match.label.quick_search_mentees".translate(Mentee: _Mentee) %></label>
    <input class="no-margin noshadow p-xxs full-width b-t b-b b-r b-l" id="cjs_quick_search_{{mentor.id}}" type="text" ng-model="searchText" placeholder='<%= "feature.bulk_match.content.select_a_different_mentee".translate(mentee: _mentee) %>' />
  </div>
  <div class="dropdown-menu col-xs-12 m-b-sm">
    <ul class="cjs-content-area cui-content-area list-group" id="search_text_results_{{mentor.id}}" inner-scroll-position>
      <li ng-repeat="student_obj in mentor.suggested_students | filter: searchText | limitTo: mentor.suggested_students_length" class="list-group-item no-padding pointer">
        <div id='mentee_search_item_{{mentor.id}}_{{student_obj[0]}}' class="p-xs clearfix" ng-class='getSuggestedMenteeClass(mentor, student_obj[0])' ng-click='updateSelectedStudent(mentor, student_obj[0])'>
          <div class="media">
            <div ng-bind-html-unsafe="students_hash[student_obj[0]].picture_with_profile_url" class="media-left"></div>
            <div class="media-body">
                <div class="col-xs-11 no-padding">
                  <div>
                    <b class="clearfix truncate-with-ellipsis whitespace-nowrap" ng-bind-html-unsafe="students_hash[student_obj[0]].name"></b>
                  </div>
                  <div class="clearfix">
                    <div class="col-xs-10 no-padding">
                      <div class="small"><span ng-show="students_hash[student_obj[0]].connected_mentor_id_group_id_list.length > 0"><%= "feature.bulk_match.content.connected_to".translate %> </span><span ng-bind-html-unsafe="students_hash[student_obj[0]].connected_mentors_html">
                        {{students_hash[student_obj[0]].connected_mentors_html}}
                      </span></div>
                      <div class="small">
                        <span ng-show="students_hash[student_obj[0]].drafted_mentor_id_group_id_list.length > 0"><%= "feature.bulk_match.content.drafted_to".translate %> </span>
                        <span ng-bind-html-unsafe="students_hash[student_obj[0]].drafted_mentors_html"></span>
                      </div>
                    </div>
                    <div class="col-xs-2 no-padding"><span class="label label-success m-r-xs pull-right">{{student_obj[1]}}%</span></div>
                  </div>
                </div>
                <div class="col-xs-1 no-padding">
                  <div class="clearfix">
                    <i class="pull-right fa fa-plus m-t-md" ng-class="{'invisible' : !canSelectStudent(mentor, student_obj[0])}"></i>
                  </div>
                </div>
            </div>
          </div>
        </div>
      </li>
    </ul>
  </div>
</div>