<%= ibox nil do %>
  <%= form_tag answer_three_sixty_survey_assessee_reviewer_path(@survey, @survey_assessee, @survey_reviewer, :code => @survey_reviewer.invitation_code), :html => {:method => :posts} do %>
    <%= render :layout => "three_sixty/survey/show", :locals => {:survey => @survey, :survey_competencies => @survey_competencies, :assessee => @survey_assessee.assessee, :survey_reviewer => @survey_reviewer, :answers => @answers, :is_for_self => @is_for_self, :is_for_preview => false, :no_tabs => @no_tabs, :survey_oeqs => @survey_oeqs} do %>
      <% if @survey.only_assessee_can_add_reviewers? && @is_for_self %>
        <%= submit_tag "feature.three_sixty.assessee.submit_and_add_reviewers".translate, :class => "btn btn-primary pull-right m-t-sm" %>
      <% else %>
        <%= submit_tag "display_string.Submit".translate, :class => "btn btn-primary pull-right m-t-sm" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>