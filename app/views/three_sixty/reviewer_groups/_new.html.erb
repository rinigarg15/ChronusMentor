<%= form_for reviewer_group, :remote => true, :format => :js, :html => {:id => "three_sixty_reviewer_group_from_new", :class => "form-horizontal"} do |f| %>
  <div class="well well-sm no-margins clearfix">
    <%= f.label "", "feature.three_sixty.settings.reviewer_group.add".translate, :for => "three_sixty_reviewer_group_name", :class => "font-bold text-muted clearfix col-xs-12 sr-only" %>
    <div class="col-md-7">
      <%= f.text_field :name, :required => true, :placeholder => "feature.three_sixty.settings.reviewer_group.title".translate, :class => "cjs_three_sixty_input_element form-control" %>
    </div>
    <div class="col-md-2">
      <label for="reviewer_group_threshold" class="sr-only"><%= "feature.three_sixty.settings.reviewer_group.threshold".translate %></label>
      <%= f.text_field :threshold, :placeholder => "feature.three_sixty.settings.reviewer_group.threshold".translate, :class => "cjs_three_sixty_input_element form-control", :id => "reviewer_group_threshold" %>
      <%= tooltip("reviewer_group_threshold", "feature.three_sixty.settings.reviewer_group.threshold_tooltip_v1".translate) %>
    </div>
    <div class="col-md-3 no-padding">
      <%= f.submit "display_string.Add".translate, :class => "btn btn-primary pull-right" %>
    </div>
  </div>
<% end %>
