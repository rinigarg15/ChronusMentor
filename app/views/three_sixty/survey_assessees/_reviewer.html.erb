<div class="list-group-item cjs_three_sixty_parent" id="three_sixty_survey_reviewer_container_<%= reviewer.id %>" >
  <div class="clearfix m-t-xs">
    <div class="col-sm-3 no-margin">
      <span class="pull-left m-r-xs cui-three-sixty-icon">
        <%= get_icon_content 'fa fa-user' %>
      </span>
      <%= reviewer.name %>
    </div>
    <div class="col-sm-3">
      <%= reviewer.email %>
    </div>
    <div class="col-sm-3">
      <%= reviewer.reviewer_group.name %>
    </div>
    <span class="pull-right cjs_three_sixty_actions" style="display:none;">
      <%= link_to(get_icon_content("fa fa-pencil text-default") + set_screen_reader_only_content("display_string.Edit".translate), edit_three_sixty_survey_assessee_reviewer_path(survey, survey_assessee, reviewer), :remote => true, :method => :get, :id => "edit_three_sixty_survey_reviewer_#{reviewer.id}") %>
      <%= link_to(get_icon_content("fa fa-trash text-default") + set_screen_reader_only_content("display_string.Delete".translate), three_sixty_survey_assessee_reviewer_path(survey, survey_assessee, reviewer), :remote => true, :method => :delete, :confirm => "feature.three_sixty.reviewer.delete_warning".translate, :class => "divider-vertical") %>
    </span>
  </div>
</div>