<%= include_ckeditor_tag %>
<% @title = "feature.login_management.header.edit_password_policy".translate %>

<%= ibox nil, ibox_class: "col-md-offset-2 col-md-8" do %>
  <%= simple_form_for @auth_config, url: update_password_policy_auth_config_path(@auth_config) do |f| %>
    <%= f.input :regex_string, as: :string, label: "feature.login_management.label.password_pattern".translate, input_html: { class: "form-control" }, hint: "feature.login_management.content.regex_string_help_text".translate, hint_html: { class: "small" } %>
    <%= f.input :password_message, label: "feature.login_management.label.password_message".translate, input_html: { class: "form-control", rows: "3", id: "cjs_auth_config_password_message" }, hint: "#{'feature.login_management.content.password_message_help_text'.translate} #{'feature.login_management.content.password_message_help_text_2'.translate}", hint_html: { class: "small" } %>

    <% action_set(class: "pull-right") do %>
      <%= cancel_link auth_configs_path %>
      <%= f.button :submit, "display_string.Save".translate %>
    <% end %>
  <% end %>
<% end %>