<% if project_requests.total_entries > project_requests.size %>
  <div id="cjs_select_all_option" class="bg-warning p-xs cui_disable_hover text-center hide">
      <div id="cjs_select_all_message">
        <%= "feature.admin_view.content.all_selected_on_the_page_html".translate(:context => 'feature.project_request.header.project_requests'.translate(Mentoring_Connection: _Mentoring_Connection), :size => "<b>#{project_requests.size}</b>".html_safe) %>
        <u class="pointer" id="cjs_select_all_handler" data-url="<%= select_all_ids_project_requests_path(filters: filter_params) %>">
          <%= "feature.admin_view.content.select_all_in_this_view_html".translate(:context => 'feature.project_request.header.project_requests'.translate(Mentoring_Connection: _Mentoring_Connection), :size => "<b>#{project_requests.total_entries}</b>".html_safe) %>
        </u>
        <%= get_icon_content("fa fa-spinner fa-spin m-r-0 cjs_select_all_loader hide") %>
      </div>
      <div id="cjs_clear_all_message" class="hide">
        <%= "feature.admin_view.content.all_selected_in_the_view_html".translate(:context => 'feature.project_request.header.project_requests'.translate(Mentoring_Connection: _Mentoring_Connection), :size => "<b>#{project_requests.total_entries}</b>".html_safe) %>
        <u class="pointer"  id="cjs_clear_all_handler"><%= "feature.admin_view.action.Clear_selection".translate %></u>
      </div>
  </div>
<% end %>
