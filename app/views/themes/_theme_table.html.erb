<% if themes.empty? %>
  <div id="no_themes">
    <p><%= "feature.custom_themes.content.no_themes_available".translate %></p>

    <% if super_console? %>
      <div id="add_new_box">
        <%= link_to "feature.custom_themes.actions.add_theme".translate, new_theme_path, class: 'btn btn-primary add_icon' %>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="table-responsive">
    <table class="table table-striped" cellpadding="0" cellspacing="0">
      <thead>
        <tr>
          <th><%= "feature.custom_themes.label.Theme".translate %></th>
          <th>
            <span class="pull-right">
              <%= "feature.custom_themes.label.actions".translate %>
            </span>
          </th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: themes %>
      </tbody>
    </table>
  </div>
<% end %>