<% @title = "feature.custom_themes.header.edit_theme".translate %>
<% @page_action = {:label => "feature.custom_themes.content.view_all_themes".translate, :url =>  themes_path, :class => "btn btn-primary" } %>

<%= ibox nil do %>
  <%= simple_form_for @theme, :html => {:multipart => true, :class => "form-horizontal"} do |f| %>
    <%= formatted_form_error(f, :object_name => 'feature.custom_themes.label.theme'.translate) %>
    <%= f.input :name, as: :string, :input_html => {:class => 'form-control'}, :label_html => {:class => "col-sm-2 control-label"}, :input_wrapper_html => {:class => "col-sm-10"} %>
    <%= f.input :css, as: :file, :wrapper => :bootstrap_with_label_wrapper, :input_html => {:class => 'form-control'}, :input_wrapper_html => {:class => "col-sm-10"}, :label_wrapper_html => {:class => "col-sm-2"} %>
    <% action_set do %>
      <div class="pull-right">
        <%= cancel_link themes_path %>
        <%= f.button :submit, "display_string.Save".translate %>
      </div>
    <% end %>
  <% end %>
<% end %>