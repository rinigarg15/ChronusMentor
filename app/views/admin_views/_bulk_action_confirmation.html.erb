<% if [AdminViewsHelper::BulkActionType::REMOVE_USER, AdminViewsHelper::BulkActionType::REMOVE_MEMBER].include? @bulk_action_type %>
  <% options = { with_image: true } %>
<% else %>
  <% options = {} %>
<% end %>

<% modal_v3_popup @bulk_action_title, options do %>
  <div id="bulk_action_popup">
    <%= get_bulk_action_partial(@bulk_action_type) %>
  </div>
<% end %>
