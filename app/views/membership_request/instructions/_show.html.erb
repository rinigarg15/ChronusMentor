<%# instruction_url =  instruction.new_record? ? membership_request_instructions_path : membership_request_instruction_path(:id => instruction.id)  %>
<%- content = instruction.content unless instruction.nil?-%>
<% modal_title = "feature.profile_customization.content.update_join_instructions".translate %>
<% modal_v3_popup modal_title do %>                    
  <div>
    <div>
      <div class="p-b-sm">
        <%= "feature.profile_customization.content.program_join_instructions".translate(program: _program) %>
        <%= embed_icon(TOOLTIP_IMAGE_CLASS, '', id: "instructions_header_help") %>
        <%= tooltip("instructions_header_help", "feature.profile_customization.content.intruction_help_text".translate, true) %>
      </div>
      <%= simple_form_for(instruction, :remote => true, :html => {:class => 'clearfix cjs-instruction-form'}) do |f| %>
        <%= f.input :content, as: :text, label_html: {:class => 'sr-only'}, input_html: {class: "form-control", rows: 5} %>
        <% action_set(class: "m-t-sm col-xs-12 no-padding") do %>
          <div class="pull-right">
            <%= link_to_function "display_string.Cancel".translate, "javascript:void(0);", class: "btn btn-white", "data-dismiss" => "modal" %>
            <%= f.button :submit, "display_string.Save".translate %>
          </div>
        <% end %>
      <% end %>
    </div>
    <%= javascript_tag  %Q[jQuery(function(){ validateInstruction.submitForm(); });] %> 
  </div>
<% end %>
