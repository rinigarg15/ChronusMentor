<div class="clearfix">
  <div class="clearfix">
    <div class="media-left">
      <%= member_picture_v3 locked_out_member, {:size => :large, :no_name => true, :outer_class => "pull-left"}, {:class => "img-circle"} %>
    </div>
    <div class="media-body">
      <div class="pull-right hidden-xs cjs_actions">
        <%= link_to "feature.user.action.unblock".translate, reactivate_account_member_path(locked_out_member), :method => :post, :remote => true, :class => "btn btn-primary cjs_unblock_links" %>
        <%= loc_loading(:loader_class => "spinner invisible") %>
      </div>
      <h4>
        <%= link_to locked_out_member.name(:name_only => true), member_path(locked_out_member) %>
        <div class="small m-t-xs"><%= get_icon_content("fa fa-clock-o no-margins") + "feature.user.content.account_blocked_at".translate(:date => DateTime.localize(locked_out_member.account_locked_at, format: :full_display_short_month) || "feature.user.content.status.unavailable".translate) %></div>
      </h4>
    </div>
  </div>
  <div class="clearfix m-t-sm visible-xs cjs_actions">
    <%= link_to "feature.user.action.unblock".translate, reactivate_account_member_path(locked_out_member), :method => :post, :remote => true, :class => "btn btn-block btn-primary cjs_unblock_links" %>
    <%= loc_loading(:loader_class => "spinner invisible") %>
  </div>
</div>