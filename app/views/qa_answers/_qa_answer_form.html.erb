<%= simple_form_for [full_qa_question, @qa_answer], html: { class: "cjs_new_qa_answer_form" }, remote: true, format: :js do |f| %>
  <%= response_flash "cjs_qa_answer_flash" %>
  <%= f.input :content, input_html: { class: "cjs_qa_answer_content form-control", rows: 5 }, placeholder: "feature.question_answers.content.write_your_answer".translate, label_html: { class: "sr-only" } %>

  <% action_set class: "pull-right" do %>
    <%= link_to "display_string.Cancel".translate, "javascript:void(0)", :class => "btn btn-white", "data-dismiss" => "modal" %>
    <%= f.button :submit, "feature.question_answers.action.post_answer".translate %>
  <% end %>
<% end %>

<%= javascript_tag do %>
  QaAnswer.validateAndPost("<%= j 'feature.question_answers.content.blank_answer_warning'.translate %>");
<% end %>

