<% if meeting_requests.total_entries > meeting_requests.size %>
  <div id="cjs_select_all_option" class="bg-warning p-xs cui_disable_hover text-center"  style="display: none;">
      <div id="cjs_select_all_message">
        <%= "feature.admin_view.content.all_selected_on_the_page_html".translate(:context => 'feature.meeting_request.header.requests_for_meeting'.translate(:meeting => _meeting), :size => "<b>#{meeting_requests.size}</b>".html_safe) %>
        <u class="pointer" id="cjs_select_all_handler" data-url="<%=select_all_ids_meeting_requests_path(filter_params)%>">
           <%= "feature.admin_view.content.select_all_in_this_view_html".translate(:context => 'feature.meeting_request.header.requests_for_meeting'.translate(:meeting => _meeting), :size => "<b>#{meeting_requests.total_entries}</b>".html_safe) %>
        </u>
        <%= content_tag(:i, image_tag('ajax-loader.gif'), :class => "icon-all hide") %>
      </div>
      <div id="cjs_clear_all_message" style="display: none;">
        <%= "feature.admin_view.content.all_selected_in_the_view_html".translate(:context => 'feature.meeting_request.header.requests_for_meeting'.translate(:meeting => _meeting), :size => "<b>#{meeting_requests.total_entries}</b>".html_safe) %>
        <u class="pointer"  id="cjs_clear_all_handler"><%= "feature.admin_view.action.Clear_selection".translate %></u>
      </div>
  </div>
<% end %>
