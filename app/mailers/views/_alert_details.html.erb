<% org_level_report = local_assigns[:org_level_report].present? %>
<table border="0" cellpadding="0" cellspacing="0" width="100%" style="table-layout: fixed;line-height: 21px; color:#333333; ">
  <tbody>
    <% object_alerts_hash.each do |object, alerts| %>
      <tr>
        <td style="border-top: 3px solid #eeeeee; padding-top: 10px">
          <div style="font-size: 1.3em;margin-bottom: 5px;font-weight: bold; color: <%= email_theme[:primary_color] %>"><%= org_level_report ? object.name : object.metric.title %></div>
          <table cellspacing="0" border = "0" cellpadding = "0">
            <tbody>
              <% alerts.each do |alert| %>
                <tr>
                  <td valign="top" align="left" style="padding-top: 10px; padding-bottom: 10px">
                    <%= content_tag(:b, alert.metric.title) + tag(:br) if org_level_report %>
                    <%= link_to("#{alert.metric.count(alert)} #{alert.description}", alert_links_hash[alert.id] , style: "text-decoration: none;") %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>